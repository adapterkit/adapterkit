	root := &ffcli.Command{
		FlagSet:    rootFlagSet,
		ShortUsage: "{{$package}} [flags] <command> [args...]",
		Options:    []ff.Option{ff.WithEnvVarNoPrefix()},
		Subcommands: []*ffcli.Command{
